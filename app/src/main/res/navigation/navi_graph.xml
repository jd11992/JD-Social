<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navi_graph"
    app:startDestination="@id/mainView">

    <activity
        android:id="@+id/mainView"
        android:name="com.jduong.jdsocial.ui.main.view.MainView"
        android:label="activity_main_view"
        tools:layout="@layout/activity_main_view" />
    <fragment
        android:id="@+id/profileFragView"
        android:name="com.jduong.jdsocial.ui.main.view.ProfileFragView"
        android:label="@string/id_profile_fragment"
        tools:layout="@layout/fragment_profile_frag_view">
        <action
            android:id="@+id/action_profileFragView_to_mainView"
            app:destination="@id/mainView" />
    </fragment>
    <fragment
        android:id="@+id/hubFragView"
        android:name="com.jduong.jdsocial.ui.main.view.HubFragView"
        android:label="@string/id_hub_fragment"
        tools:layout="@layout/fragment_hub_frag_view">
        <action
            android:id="@+id/action_hubFragView_to_mainView"
            app:destination="@id/mainView" />
    </fragment>
</navigation>